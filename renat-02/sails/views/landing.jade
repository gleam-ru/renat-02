              )
              .form-group
                label.form-label(for='subscribe-email'
                ) E-mail
                input#subscribe-email.form-control(type='email', name='email', 
                  data-constraints='@Required @Email'
                  )
              .btn-wrapper
                button.btn.btn-sm.btn-yellow(type='submit') Submit
            .bg-sm-absolute-left.bg-caribbean-green
        li.cell-sm-6.cell-md-5.cell-md-preffix-1.section-50.section-lg-85
